        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:textColor="@android:color/black"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/iv_shop_fav"
        android:layout_toRightOf="@+id/more"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_brands_shops"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/textFilterColor"
        android:layout_below="@+id/tv_fav_shop_name"
        android:textSize="@dimen/_14sdp"
        android:gravity="right"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/iv_shop_fav"
        android:layout_toRightOf="@+id/more"
        />

    <Button
        android:id="@+id/more"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/arrowdown"
        android:backgroundTint="@color/colorAccent"
        android:scaleY="0.3"
        android:scaleX="0.3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
