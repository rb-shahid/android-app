<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="5dp"
    android:clickable="true"
    android:layout_margin="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/my_request_record_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"

        >

        <LinearLayout
            android:id="@+id/first_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"

            >

            <TextView
                android:id="@+id/request_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="رقم الطلب"
                android:textAlignment="gravity"
                android:textColor="#5e5e5e"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="right"
                android:text="0000775#"
                android:textAlignment="gravity"
                android:textColor="#d2d1d1"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/workshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="الورشة"
                android:textAlignment="gravity"
                android:textColor="#5e5e5e"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/workshop_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ورشة ميكانيك للسيارات"
                android:textAlignment="gravity"
                android:textColor="#d2d1d1"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
          >

            <TextView
                android:id="@+id/request_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="تاريخ الطلب"
                android:textAlignment="gravity"
                android:textColor="#5e5e5e"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="right"
                android:text="19/12/2017"
                android:textAlignment="gravity"
                android:textColor="#d2d1d1"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/request_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="نوع الطلب"
                android:textAlignment="gravity"
                android:textColor="#5e5e5e"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ملاحة"
                android:textAlignment="gravity"
                android:textColor="#d2d1d1"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <Button
            android:id="@+id/rate_shope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_lay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="#ff9501"
            android:gravity="center"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="قيم الورشة"
            android:textColor="#fff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />


    </RelativeLayout>






</android.support.v7.widget.CardView>
