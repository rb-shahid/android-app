<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="5dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/workShope_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:background="@drawable/image1"
                        android:padding="@dimen/_2sdp"

                        />

                    <FrameLayout
                        android:id="@+id/fav_frame"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/workShope_img"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/fav_bacground">

                        <CheckBox
                            android:id="@+id/check_fav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:button="@drawable/fav_checkbox_background" />
                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/like_frame"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignTop="@+id/workShope_img"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_toLeftOf="@+id/fav_frame"
                        android:background="@drawable/like_background">

                        <CheckBox
                            android:id="@+id/check_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:button="@drawable/fav_checkbox_background" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_rate"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignTop="@+id/workShope_img"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_toLeftOf="@+id/like_frame"
                        android:background="@drawable/green_background"
                        android:gravity="center"
                        android:text="3.5"
                        android:textColor="#fff"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_discount"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/workShope_img"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/txt_discount_background"
                        android:gravity="center"
                        android:text="-52% \n خصم"
                        android:textColor="#fff"
                        android:textSize="@dimen/_16sdp" />


                    <TextView
                        android:id="@+id/tv_shop_name_shop_list"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignBottom="@+id/workShope_img"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:background="@drawable/work_shope_txt_background"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:text="ورشة منصور لإصلاح السيارات"
                        android:textColor="#fff"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_distance_item"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignBottom="@+id/workShope_img"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:background="@drawable/txt_kilometer_background"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:text="120Km"
                        android:textColor="#fff"
                        android:textSize="@dimen/_16sdp" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/btn_rounded_orange"
                    android:paddingRight="@dimen/_30sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/btn_call_shop"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"

                    />

                <ImageButton
                    android:id="@+id/btn_call_shop"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_circle"
                    android:elevation="@dimen/_2sdp"
                    android:padding="@dimen/_15sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_call_green" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/btn_rounded_orange"
                    android:onClick="DirectionsToShop"
                    android:paddingRight="@dimen/_35sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text="@string/btn_nevegate_shop"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    />

                <ImageButton
                    android:id="@+id/btn_navigate_shop"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_circle"
                    android:elevation="@dimen/_1sdp"
                    android:onClick="DirectionsToShop"
                    android:padding="@dimen/_15sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_sports_car" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
